<UserControl x:Class="QuanLyTangThuHoKhau.QuanLyTuiHSCT.QuanLyDuLieuTuiHSCTMoi.Views.ThemMoiTuiHSCTView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyTangThuHoKhau.QuanLyTuiHSCT.QuanLyDuLieuTuiHSCTMoi.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <UserControl.Resources>
        <Style x:Key="BoxHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>
    </UserControl.Resources>
    <ui:SimpleStackPanel Spacing="12">
        <TextBlock
            Text="Thêm mới hộ thường trú"
            Style="{StaticResource TitleTextBlockStyle}"
            FontSize="28"
            Margin="0,8,0,12" />
        <ComboBox
            ui:ControlHelper.Header="Đăng ký tại thôn, xóm:" 
            ItemsSource="{Binding DanhSachThonXom}"
            SelectedItem="{Binding SelectedThonXomChuaTuiHSCT}"
            DisplayMemberPath="TenThonXom"/>
        <TextBox
            ui:ControlHelper.Header="Họ tên chủ hộ"
            Text="{Binding HoTenChuHo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Calendar
            x:Name="calendar"
            VerticalAlignment="Top" 
            ui:ControlHelper.Header="Ngày đăng ký" 
            SelectionMode="SingleDate"
            SelectedDate="{Binding NgayDangKy}"/>
        <StackPanel>
            <ui:SimpleStackPanel Spacing="5"
                                 Orientation="Horizontal">
                <Button Content="Thêm hộ mới"
                        Style="{DynamicResource AccentButtonStyle}"
                        Command="{Binding ThemMoiTuiHSCTCommand}"></Button>
            </ui:SimpleStackPanel>
            <TextBlock
                x:Name="ErrorText"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{DynamicResource SystemControlErrorTextForegroundBrush}"
                Margin="0,8,0,0"
                Visibility="Collapsed" />
        </StackPanel>
    </ui:SimpleStackPanel>
</UserControl>
