<ui:ContentDialog x:Class="QuanLyTangThuHoKhau.Core.Types.Views.YesNoConfirmContentDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:QuanLyTangThuHoKhau.Core.Types.Views"
                  mc:Ignorable="d"
                  d:DesignHeight="450" d:DesignWidth="800"
                  Style="{StaticResource ScrollableContentDialogStyle}"
                  Title="Xác nhận"
                  PrimaryButtonText="Có"
                  CloseButtonText="Không"
                  DefaultButton="Primary"
                  CloseButtonClick="OnCloseButtonClick"
                  xmlns:ui="http://schemas.modernwpf.com/2019">
    <ui:SimpleStackPanel Spacing="12">
        <TextBlock
            x:Name="ConfirmContentTextBlock"
            Style="{StaticResource BodyTextBlockStyle}"
            Margin="0,8,0,0"
            Text="{Binding NoiDungXacNhan}" 
            d:Text="Bạn có muốn thực hiện thao tác này không?"/>
    </ui:SimpleStackPanel>
</ui:ContentDialog>